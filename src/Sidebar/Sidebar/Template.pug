ul.accordionSidebar.navbar-nav.bg-gradient-primary.sidebar.accordion(ref='sidebar' v-bind:class='toggledClass')
    dynamic-component(
        v-bind:component_infos='brandSection'
    )
    hr.sidebar-divider.my-0
    div(
        v-for="navigationLinkGroupSection in navigationLinkGroupSections"
    )
        dynamic-component(
            v-bind:component_infos='navigationLinkGroupSection'
        )
        hr.sidebar-divider.my-0
    // Sidebar Toggler (Sidebar)
    .toggler.text-center.d-none.d-md-inline(ref='toggler')
        button#sidebarToggle.rounded-circle.border-0

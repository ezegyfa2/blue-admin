.container-fluid
    .card.shadow.mb-4
        .card-header.py-3
            h6.m-0.font-weight-bold.text-primary {{ title }}
        .card-body
            .row.mb-2
                .col-sm-12.col-md-6
                    label
                        | Show 
                        blue-admin-table-select(
                            :value.sync='selectedRowToShowCount'
                            v-bind:options='row_to_show_counts'
                            name='row_to_show_count'
                        )
                        |    entries
                .col-sm-12.col-md-6.create_button_container
                    blue-admin-create-button(
                        content='Create'
                        icon_class='fas fa-plus'
                        v-bind:url='createUrl'
                    )
                //.col-sm-12.col-md-6
                    .filter
                        label
                            | Search:
                            input.form-control.form-control-sm(type='search' placeholder='')
            vue-table-with-edit-buttons(
                v-bind:column_names='columnNames'
                v-bind:rows='currentRows'
                v-bind:with_footer='true'
            ) 
            .row
                .col-sm-12.col-md-5
                    .dataTables_info(role='status' aria-live='polite') {{ description }}
                .col-sm-12.col-md-7
                    bootstrap-pagination(
                        v-bind:page_count='pageCount' 
                        v-bind:selected_page_number='validatedSelectedPageNumber'
                    )
